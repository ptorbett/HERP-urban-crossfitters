<h1>Profile#new</h1>
<p>Find me in app/views/profile/new.html.erb</p>

<%= form_for @profile, :url => { :action => "create" } do |f| %>
  First name:<%= f.text_field :first_name %></br>
  Last name:<%= f.text_field :last_name %></br>
  Height:<%= f.text_field :height %></br>
  Weight: <%= f.text_field :weight %></br>
  Birthday:<%= f.text_field :birthdate %></br>
  Bio: <%= f.text_area  :description %></br>
  <%= f.submit "Submit" %>
<% end %>
