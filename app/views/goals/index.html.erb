<div class="row">
    <div class="span8">
        <h1>All Goals</h1>
    </div>
</div>&nbsp;
<% if not @goals.size > 0 %>
    <div class="row">
        <div class="span8">
            <h3>You currently have no goals.</h3>
        </div>
    </div>
<% else %>
    <% @goals.each do |goal| %>
        <div class="row">
            <div class="span8">
                <h2><%= link_to goal.name, goal_path(goal.id) %></h2>
                <p><%= goal.description %></p>
                <p>Status: 
                    <span class="label<%= ' label-success' if goal.status == 'complete' %>">
                    <%= goal.status %>
                    </span>
                </p>
                <p><strong>Deadline: </strong><%= goal.deadline %></p>
            </div>
        </div>
    <% end %>
<% end %>